<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:com.gwtmobile.ui.client.widgets"
	xmlns:i="urn:import:com.silverpeas.mobile.client.components.icon">
	
	<ui:with field='msg' type='com.silverpeas.mobile.client.apps.gallery.resources.GalleryMessages'/>
	<ui:with field='res' type='com.silverpeas.mobile.client.resources.ApplicationResources'/>
	<ui:with field='ressources' type='com.silverpeas.mobile.client.apps.gallery.resources.GalleryResources'/>

	<ui:style>		

		.contentH {
			-webkit-box-pack: center;
			-webkit-box-align: center;
			width: 100%;
			height: 100%;
		}
		
		.contentV {
			-webkit-box-pack: center;
			-webkit-box-align: center;
			height: 100%;
			width: 50%; /* Deux colonnes */
		}
		
		.gallery {
			margin-left: 0.5em;
			margin-right: 0.5em;
		}
	</ui:style>

	<g:HTMLPanel ui:field="htmlPanel">
		<m:HeaderPanel leftButton="Back" ui:field="header">
			<g:Label horizontalAlignment="center">Gallery</g:Label>			
		</m:HeaderPanel>		
		
		<m:ListPanel selectable="true" ui:field="place">
			<m:ListItem showArrow="true">				
				<m:HorizontalPanel>
					<g:Label styleName="{ressources.css.galleries}"></g:Label>
					<g:Label styleName="{style.gallery}">Working gallery :</g:Label>
					<g:Label ui:field="gallery">-</g:Label>
				</m:HorizontalPanel>
			</m:ListItem>
			<m:ListItem showArrow="false">
				<m:DropDownList ui:field="albums"></m:DropDownList>
			</m:ListItem>
		</m:ListPanel>		
		
		<m:SlidePanel rotate="true">
			<m:Slide>
				<m:HorizontalPanel ui:field="content" secondaryStyle="{style.contentH}">
					<m:VerticalPanel secondaryStyle="{style.contentV}">
						<i:Icon text="Take picture" styleName="{res.css.camera}" ui:field="takePicture" height="50%"/>
						<i:Icon text="Sync pictures" styleName="{res.css.sync}" ui:field="sync" height="50%"/>
					</m:VerticalPanel>
					<m:VerticalPanel secondaryStyle="{style.contentV}">
						<i:Icon text="Local pictures" styleName="{res.css.localstorage}" ui:field="local" height="50%"/>				
						<i:Icon text="Remote pictures" styleName="{res.css.settings}" ui:field="remote" height="50%"/>
					</m:VerticalPanel>
				</m:HorizontalPanel>			
			</m:Slide>
		</m:SlidePanel>

		<m:HeaderPanel ui:field="footer">
			<g:Label horizontalAlignment="center" wordWrap="true" ui:field="footerTitle">Silverpeas&copy; 1999-2012</g:Label>
		</m:HeaderPanel>
	</g:HTMLPanel>
</ui:UiBinder> 