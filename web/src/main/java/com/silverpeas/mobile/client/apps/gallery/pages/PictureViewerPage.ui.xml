<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets"
	xmlns:c="urn:import:com.silverpeas.mobile.client.components">
	
	<ui:with field='msg' type='com.silverpeas.mobile.client.apps.gallery.resources.GalleryMessages'/>
	<ui:with field='ressources' type='com.silverpeas.mobile.client.apps.gallery.resources.GalleryResources'/>
	
	<g:HTMLPanel>
		<m:HeaderPanel leftButton="Back">
			<g:Label horizontalAlignment="center" ui:field="title"></g:Label>				
		</m:HeaderPanel>
		<m:ScrollPanel ui:field="container">
			<g:Image ui:field="content" width="100%"/>
		</m:ScrollPanel>
		<m:HeaderPanel>	<c:FooterBar/> </m:HeaderPanel>	
	</g:HTMLPanel>
</ui:UiBinder> 