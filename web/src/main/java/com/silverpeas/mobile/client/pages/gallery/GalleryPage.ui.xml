<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:com.gwtmobile.ui.client.widgets"
	xmlns:i="urn:import:com.silverpeas.mobile.client.components.icon">
	
	<ui:with field='msg' type='com.silverpeas.mobile.client.resources.ApplicationMessages'/>
	<ui:with field='res' type='com.silverpeas.mobile.client.resources.ApplicationResources'/>

	<ui:style>
		.flex>div {
			display: table;
			width: 100%;
		}
		
		.flex>div>* {
			vertical-align: middle;
			display: table-cell;
		}
		
		.flex>div>*:first-child {
			text-align: left;
			padding-right: 1em;
			width: 30%;
		}
		
		.flex>div>*:last-child {
			width: 90%;
		}
	</ui:style>

	<g:HTMLPanel>
		<m:HeaderPanel leftButton="Back">
			<g:Label horizontalAlignment="center">Silverpeas Mobile - Gallery</g:Label>
		</m:HeaderPanel>

		<g:Grid styleName="{res.css.icon}">
			<g:row>
				<g:customCell>
					<i:Icon text="Take picture" styleName="{res.css.camera}" ui:field="takePicture" />
				</g:customCell>
				<g:customCell>
					<i:Icon text="Locals pictures" styleName="{res.css.localstorage}" ui:field="local" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<i:Icon text="Sync pictures" styleName="{res.css.sync}" ui:field="sync" />
				</g:customCell>
				<g:customCell>
					<i:Icon text="Settings" styleName="{res.css.settings}" ui:field="setup" />
				</g:customCell>
			</g:row>
		</g:Grid>


		<m:HeaderPanel>
			<g:Label horizontalAlignment="center" wordWrap="true">Copyright
				Silverpeas 1999-2011</g:Label>
		</m:HeaderPanel>
	</g:HTMLPanel>
</ui:UiBinder> 