<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets"
	xmlns:f="urn:import:com.silverpeas.mobile.client.components">
	
	<ui:with field='msg' type='com.silverpeas.mobile.client.apps.contacts.resources.ContactsMessages'/>
	
	<ui:style>
		
		.ListPanel {
			padding-left: 0.5em;
			padding-right: 0.5em;
			padding-top: 0.5em;
			position: fixed;
			top: 3em;
			right: 0em;
			/*font-size: 0.9em;*/ 
			direction: rtl;
			font-family: monospace;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<m:HeaderPanel leftButton="Back">
			<g:Label horizontalAlignment="center" text="{msg.title}"></g:Label>
		</m:HeaderPanel>		
		
		<m:HorizontalPanel ui:field="avatarPanel"></m:HorizontalPanel>
					
			<m:AccordionPanel>
				<m:AccordionStack ui:field="detail">
					<m:AccordionHeader><g:Label text="{msg.identity}"></g:Label></m:AccordionHeader>
					<m:AccordionContent>
						<m:HorizontalPanel><g:Label text="{msg.lastName}"></g:Label><g:HTML>&nbsp;</g:HTML><g:Label ui:field="lastName"></g:Label></m:HorizontalPanel>
						<m:HorizontalPanel><g:Label text="{msg.firstName}"></g:Label><g:HTML>&nbsp;</g:HTML><g:Label ui:field="firstName"></g:Label></m:HorizontalPanel>
						<m:HorizontalPanel><g:Label text="{msg.eMail}"></g:Label><g:HTML>&nbsp;</g:HTML><g:Anchor ui:field="eMail"></g:Anchor></m:HorizontalPanel>
						<m:HorizontalPanel><g:Label text="{msg.phoneNumber}"></g:Label><g:HTML>&nbsp;</g:HTML><g:Anchor ui:field="phoneNumber"></g:Anchor></m:HorizontalPanel>
					</m:AccordionContent>
				</m:AccordionStack>
			</m:AccordionPanel>
			<m:ScrollPanel></m:ScrollPanel>			
		
		<m:Button ui:field="addButton" horizontalAlignment="center" text="{msg.addContactButton}"></m:Button>
			
		
			
		
			
		<m:HeaderPanel></m:HeaderPanel>		
	</g:HTMLPanel>

</ui:UiBinder> 