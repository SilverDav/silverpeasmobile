<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets">
	
	<ui:with field='msg' type='com.silverpeas.mobile.client.apps.status.resources.StatusMessages'/>
	<ui:import field='com.gwtmobile.ui.client.widgets.ListItem.ShowArrow.*' />
	
	<g:HTMLPanel>	
		<m:ScrollPanel>
			<m:ListPanel selectable="true" ui:field="panelStatus" >
				<m:ListItem  displayArrow="{Visible}"><g:Label text="{msg.changeStatus}"></g:Label></m:ListItem>
			</m:ListPanel>
		</m:ScrollPanel>
		<g:Anchor ui:field="more" text="{msg.moreStatus}"></g:Anchor>		
	</g:HTMLPanel>
	
</ui:UiBinder> 